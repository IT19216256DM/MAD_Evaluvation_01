<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Topic4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".RetrievePage">

    <TextView
        android:id="@+id/displaytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="cursive"
        android:text="@string/topic4"
        android:textColor="@android:color/black"
        android:textColorLink="@android:color/background_dark"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/uploadedImg"
        android:layout_width="230dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:src="@drawable/picture" />

    <EditText
        android:id="@+id/viewId"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/retrievehint1"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/viewtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/retrievehint2"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/viewPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/retrievehint3"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/viewauthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/retrievehint4"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/viewPreparationtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/retrievehint5"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/viewCooktime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/retrievehint6"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/viewTotaltime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/retrievehint7"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btneditdata"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/button_backg"
        android:text="@string/btneditdata"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/holo_green_dark"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:text="EDIT" />

    <Button
        android:id="@+id/buttonsavedetails"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/button_backg"
        android:text="@string/btnsavedetails"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:text="SAVE" />


